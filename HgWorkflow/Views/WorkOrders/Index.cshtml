@model IEnumerable<HgWorkflow.Models.WorkOrder>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/NewStyle.css" rel="stylesheet" />
<div class="list-page">
    <div class="form">
        <div class="form-horizontal">
            <p class="text-center text-info">
    
    

            </p>
            @using (Html.BeginForm())
            {
            <div class="col-lg-12 text-center" >


                    @Html.TextBox("SearchString", "", new {style = "display: inline;", Placeholder = "Sök på Telefonnummer/ Reparationsnr", @class = "form-control" })
                    <input type="submit" value="Sök" class="btn btn-default" style="background-color:#004785;color:#ffffff;width:150px;" />
                    <input type="button" class="btn btn-success" style="background-color:#00580b;color:#ffffff;width:150px" value="Skapa ny Reparation" onclick="location.href='@Url.Action("Create", "WorkOrders")'" />
                              
               

            </div>
            }
            <table class="table" style="text-align:left;">

                <tr>
                    <th>
                        @Html.Label("Reparationsnr")
                    </th>

                    <th>
                        @Html.Label("Kund Namn")
                    </th>
                    <th>
                        @Html.Label("Telefonnummer")
                    </th>

                    <th>
                        @Html.Label("Status")
                    </th>
                    <th>
                        @Html.Label("Anteckningar")
                    </th>
                    <th class="text-center">
                        @Html.Label("Handling")
                    </th >
                    <th></th>
                </tr>
                @if (Model == null)
                        {
                    <span> No Items found</span>

                }
                else
                {

                    foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkOrderId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerMobileNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comments)
                        </td>

                        <td class="text-center">
                            @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) ||
                            @Html.ActionLink("Skriv ut", "Details", new { id = item.Id }) 
                            @*@Html.ActionLink("Radera", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                    }
                }

            </table>
        </div>
            </div>
        </div>
    </div>
</div>
